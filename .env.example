# Nong-View Environment Variables Template
# Copy this file to .env and fill in your values

# Application Settings
ENVIRONMENT=development
DEBUG=False
API_V1_STR=/api/v1
PROJECT_NAME=Nong-View API
VERSION=1.0.0

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database Settings (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/nongview
# Alternative format for async:
# DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/nongview

# Redis Settings
REDIS_URL=redis://localhost:6379/0

# Security Settings
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440
ALGORITHM=HS256

# File Storage Settings
UPLOAD_PATH=/tmp/uploads
CROP_PATH=/tmp/crops
EXPORT_PATH=/tmp/exports
MAX_FILE_SIZE=2147483648  # 2GB in bytes

# CORS Settings
ALLOWED_HOSTS=*
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# External Services
# AWS S3 (선택사항)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_BUCKET_NAME=your-bucket-name
# AWS_REGION=us-east-1

# Monitoring (선택사항)
# SENTRY_DSN=your-sentry-dsn

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s